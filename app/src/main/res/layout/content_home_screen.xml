<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0sp"
    android:paddingLeft="0sp"
    android:paddingRight="0sp"
    android:paddingTop="0sp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shashank.ltpms.HomeScreen"
    tools:showIn="@layout/app_bar_home_screen"
    android:background="@color/color_white"
    android:fillViewport="true">

<RelativeLayout
    android:id="@+id/reltop"
    android:elevation="10sp"
    android:padding="10sp"
    android:background="@color/bright_yellow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
    <TableRow
        android:id="@+id/row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.v7.widget.CardView
            android:layout_weight="1"
            app:cardCornerRadius="5sp"
            app:cardElevation="10sp"
            app:cardPreventCornerOverlap="true"
            android:layout_margin="5sp"
            android:id="@+id/profile_card">
            <com.example.shashank.ltpms.CustomTextView
                android:fontFamily="serif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:id="@+id/profile_tv" />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_weight="1"
            app:cardCornerRadius="5sp"
            app:cardElevation="10sp"
            android:layout_margin="5sp"
            android:id="@+id/transaction_card">
            <com.example.shashank.ltpms.CustomTextView
                android:fontFamily="serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="Transactions"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/transactions_tv" />
        </android.support.v7.widget.CardView>
    </TableRow>

    <TableRow
        android:id="@+id/row_2"
        android:layout_below="@+id/row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.v7.widget.CardView
            android:layout_weight="1"
            app:cardCornerRadius="5sp"
            app:cardElevation="10sp"
            app:cardPreventCornerOverlap="true"
            android:layout_margin="5sp"
            android:layout_height="match_parent"
            android:id="@+id/properties_card">
            <com.example.shashank.ltpms.CustomTextView
                android:fontFamily="serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Properties"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_margin="5sp"
                android:id="@+id/properties_tv" />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_weight="1"
            app:cardCornerRadius="5sp"
            app:cardElevation="10sp"
            android:layout_margin="5sp"
            android:id="@+id/Maintenance_history_card">
            <com.example.shashank.ltpms.CustomTextView
                android:fontFamily="serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="Maintenance History"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/maintenance_tv" />
        </android.support.v7.widget.CardView>
    </TableRow>

    <TableRow
        android:id="@+id/row_3"
        android:layout_below="@+id/row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        >
        <android.support.v7.widget.CardView
            android:layout_weight="1"
            app:cardCornerRadius="5sp"
            app:cardElevation="10sp"
            app:cardPreventCornerOverlap="true"
            android:layout_margin="5sp"
            android:layout_height="match_parent"
            android:id="@+id/documents_card">
            <com.example.shashank.ltpms.CustomTextView
                android:fontFamily="serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Documents"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_margin="5sp"
                android:id="@+id/documents_tv" />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_weight="1"
            app:cardCornerRadius="5sp"
            app:cardElevation="10sp"
            android:layout_margin="5sp"
            android:id="@+id/support_card">
            <com.example.shashank.ltpms.CustomTextView
                android:fontFamily="serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="Support"
                android:gravity="center"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/support_tv" />
        </android.support.v7.widget.CardView>
    </TableRow>
</RelativeLayout>
<ScrollView
    android:padding="10dp"
    android:layout_below="@+id/reltop"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<LinearLayout

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
    android:padding="10sp"
    android:id="@+id/relbottom"
        android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <com.example.shashank.ltpms.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Profile"
        android:textSize="12sp"
        android:id="@+id/textView4"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />

    <ProgressBar
        android:scaleY="5"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/profile_progress"
        android:layout_below="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:max="100"
        android:progressTint="@color/primary_color"
        android:progress="50"
        android:indeterminate="false"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_toRightOf="@+id/imageView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:text="50%"
        android:textSize="12sp"
        android:gravity="end"
        android:id="@+id/profile_progress_percent"
        android:layout_above="@+id/profile_progress"
        android:layout_alignRight="@+id/profile_progress"
        android:layout_alignEnd="@+id/profile_progress" />

        <ImageView
            android:src="@drawable/profile_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView4"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:padding="10sp"
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relbottom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tableRow2"
            >

            <ImageView

                android:src="@drawable/payments_icon"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </TableRow>

        <com.example.shashank.ltpms.CustomTextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Payments"
            android:textSize="15sp"
            android:id="@+id/textView5"
            android:layout_toRightOf="@+id/tableRow2"
            android:layout_toEndOf="@+id/tableRow2"
            android:layout_centerVertical="true" />

        <com.example.shashank.ltpms.CustomTextView
            android:background="@color/bright_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Upcoming:"
            android:paddingLeft="6sp"
            android:paddingTop="5sp"
            android:textSize="15sp"
            android:id="@+id/textView7"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView5"
            android:layout_toRightOf="@+id/textView5" />

        <com.example.shashank.ltpms.CustomTextView
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="@color/bright_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="5"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:paddingTop="5sp"
            android:gravity="end"
            android:id="@+id/payments_upcoming_tv"
            android:layout_alignTop="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView7" />

    </RelativeLayout>

    <RelativeLayout
        android:padding="10sp"
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tableRow3" >

            <ImageView
                android:src="@drawable/transactions_icon"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </TableRow>

        <com.example.shashank.ltpms.CustomTextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Transactions"
            android:textSize="15sp"
            android:id="@+id/textView6"
            android:layout_toRightOf="@+id/tableRow3"
            android:layout_toEndOf="@+id/tableRow3"
            android:layout_centerVertical="true" />

        <com.example.shashank.ltpms.CustomTextView
            android:background="@color/bright_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Upcoming:"
            android:paddingLeft="6sp"
            android:paddingTop="5sp"
            android:textSize="15sp"
            android:id="@+id/textView8"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView6"
            android:layout_toEndOf="@+id/textView6" />

        <com.example.shashank.ltpms.CustomTextView
            android:paddingRight="10dp"
            android:background="@color/bright_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="5"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:paddingTop="5sp"
            android:gravity="end"
            android:id="@+id/Transactions_upcoming_tv"
            android:layout_alignTop="@+id/textView8"
            android:layout_alignBottom="@+id/textView8"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView8"
            android:layout_toEndOf="@+id/textView8" />
    </RelativeLayout>

    <RelativeLayout
        android:padding="10sp"
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tableRow4" >

            <ImageView
                android:src="@drawable/properties_icon"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </TableRow>

        <com.example.shashank.ltpms.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Properties"
            android:textSize="15sp"
            android:id="@+id/textView10"
            android:layout_toRightOf="@+id/tableRow4"
            android:layout_toEndOf="@+id/tableRow4"
            android:layout_centerVertical="true" />

        <com.example.shashank.ltpms.CustomTextView
            android:background="@color/bright_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Total"
            android:paddingLeft="6sp"
            android:paddingTop="5sp"
            android:textSize="15sp"
            android:id="@+id/textView11"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView10"
            android:layout_toEndOf="@+id/textView10" />

        <com.example.shashank.ltpms.CustomTextView
            android:paddingRight="10dp"
            android:background="@color/bright_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="5"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:paddingTop="5sp"
            android:gravity="end"
            android:id="@+id/Properties_total_tv"
            android:layout_alignTop="@+id/textView11"
            android:layout_alignBottom="@+id/textView11"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView11"
            android:layout_toEndOf="@+id/textView11" />
    </RelativeLayout>

    <RelativeLayout
        android:padding="10sp"
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tableRow5" >

            <ImageView
                android:src="@drawable/documents_icon"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </TableRow>

        <com.example.shashank.ltpms.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Documents"
            android:textSize="15sp"
            android:id="@+id/textView13"
            android:layout_toRightOf="@+id/tableRow5"
            android:layout_toEndOf="@+id/tableRow5"
            android:layout_centerVertical="true" />

        <com.example.shashank.ltpms.CustomTextView
            android:background="@color/bright_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Total"
            android:paddingLeft="6sp"
            android:paddingTop="5sp"
            android:textSize="15sp"
            android:id="@+id/textView14"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView13"
            android:layout_toEndOf="@+id/textView13" />

        <com.example.shashank.ltpms.CustomTextView
            android:paddingRight="10dp"
            android:background="@color/bright_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="5"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:paddingTop="5sp"
            android:gravity="end"
            android:id="@+id/Documents_total_tv"
            android:layout_alignTop="@+id/textView14"
            android:layout_alignBottom="@+id/textView14"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView14"
            android:layout_toEndOf="@+id/textView14" />
    </RelativeLayout>

</LinearLayout>
    </ScrollView>
    </RelativeLayout>