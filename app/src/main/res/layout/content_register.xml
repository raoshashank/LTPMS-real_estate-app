<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shashank.ltpms.RegisterActivity"
    tools:showIn="@layout/activity_register"
    android:id="@+id/relreg">

    <TextView
        android:textAlignment="center"
        android:fontFamily="serif"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Enter Your Details"
        android:textColor="@color/std_gold"
        android:textSize="30sp"
        android:id="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:fontFamily="serif"
        android:backgroundTint="@color/std_gold"
        android:textStyle="italic"
        android:textColorHint="@color/std_gold"
        android:textCursorDrawable="@drawable/cursor_color"
        android:hint="Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp" />

    <EditText
        android:fontFamily="serif"
        android:backgroundTint="@color/std_gold"
        android:textStyle="italic"
        android:textColorHint="@color/std_gold"
        android:textCursorDrawable="@drawable/cursor_color"
        android:hint="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_register"
        android:layout_below="@+id/username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:textColorHint="@color/std_gold"
        android:backgroundTint="@color/std_gold"
        android:hint="Password"
        android:fontFamily="serif"
        android:textStyle="italic"
        android:textCursorDrawable="@drawable/cursor_color"
        android:id="@+id/password_register"
        android:typeface="serif"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_register"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:fontFamily="serif"
        android:backgroundTint="@color/std_gold"
        android:textStyle="italic"
        android:textColorHint="@color/std_gold"
        android:textCursorDrawable="@drawable/cursor_color"
        android:hint="Contact No."
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Contact1_register"
        android:layout_below="@+id/password_register"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:fontFamily="serif"
        android:backgroundTint="@color/std_gold"
        android:textStyle="italic"
        android:textColorHint="@color/std_gold"
        android:textCursorDrawable="@drawable/cursor_color"
        android:hint="Address"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Address_register"
        android:layout_below="@+id/Contact1_register"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Register"
        android:textSize="25sp"
        android:textStyle="italic|bold"
        android:fontFamily="serif"
        android:textColor="@color/std_gold"
        android:id="@+id/register"
        android:backgroundTint="@color/dark_gold"
        android:layout_below="@+id/Address_register"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginTop="80dp" />
</RelativeLayout>
